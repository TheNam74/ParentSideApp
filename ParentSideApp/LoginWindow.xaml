<Window x:Class="ParentSideApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParentSideApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" Closing="LoginWindow_OnClosing">
    <Canvas>
        <Label Content="Username" Canvas.Left="355" Canvas.Top="123"></Label>
        <TextBox Width="100" Height="auto" Canvas.Left="336" Canvas.Top="154" Name="usernameTextBox"></TextBox>
        <Label Content="Password"  Canvas.Left="355" Canvas.Top="177"></Label>
        <PasswordBox Width="100" Height="auto" Canvas.Left="336" Canvas.Top="207" Name="PasswordTextBox"></PasswordBox>
        <Button Content="Login" Canvas.Left="370" Canvas.Top="242" Name="loginBtn" IsDefault="True" Click="LoginBtn_OnClick"></Button>
    </Canvas>
</Window>
